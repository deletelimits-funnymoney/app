<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp">

    <LinearLayout
        android:id="@+id/transaction_list_item_date"
        android:layout_width="80dp"
        android:paddingTop="5dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/transaction_list_item_day"
            android:layout_width="40dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:textColor="@color/primary_light"
            android:gravity="center_horizontal"
            android:background="@drawable/rounded_background"
            android:text="10"
            android:textAppearance="@style/TextAppearance.AppCompat.Small" />

        <TextView
            android:id="@+id/transaction_list_item_month"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="March"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="100dp"
        android:layout_marginRight="100dp"
        android:layout_toRightOf="@+id/transaction_list_item_date"
        android:orientation="vertical">

        <TextView
            android:id="@+id/transaction_list_item_reference_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:lines="1"
            android:text="Titlealks"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <TextView
            android:id="@+id/transaction_list_item_reason"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="2"
            android:text="Long cryptic sadjf lajshdfg lajshdg fljahsdg fljadfgslasldhfg lasdfasdlf agsdf"
            android:textAppearance="@style/TextAppearance.AppCompat.Small" />
    </LinearLayout>

    <TextView
        android:id="@+id/transaction_list_item_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="15dp"

        android:text="1000.00 â‚¬"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

</RelativeLayout>